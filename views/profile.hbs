<h1>Профиль</h1>


<div class="row">
    <div class="col s6">
        {{#if user.avatarUrl}}
        <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
        {{else}}
        <p>Фотографии нет</p>
        {{/if}}
    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
         <p>Ваш email: <strong>{{user.email}}</strong></p>
            <div class="input-field">
                <input id="name" name="price" type="text" class="validate" required value="{{user.name}}">
                <label for="name">Имя</label>
                <span class="helper-text" data-error="введите имя"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
            </div>
          <button class="btn" type="submit">Изменить</button>
        </form>
    </div>
</div>
