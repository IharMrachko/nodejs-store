<div class="order-wrapper">

    <h1>Мои заказы</h1>

    {{#if ordersMap.length}}
     {{#each ordersMap}}
         <div class="row">
             <div class="col s6 offset-s3">
                 <div class="card">
                     <div class="card-content">
                         <span class="card-title">Заказ: {{coursesTitle}}</span>
                         <p>{{data}}</p>
                         <p><em>{{name}}</em></p>

                         <hr>

                         <p>Цена: <span class="price">{{coursesPrice}}</span></p>
                     </div>
                 </div>
             </div>
         </div>
     {{/each}}
    {{else}}
        <p>Заказов пока нет</p>
        {{/if}}
</div>
